{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./tsconfig.tsbuildinfo",
    "target": "es2020",
    "module": "esnext",
    "lib": ["es2019", "ES2020.String"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": ".",
    "rootDir": "./src",
    // For module loader tests:
    "allowJs": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "noImplicitOverride": true
  },
  "include": ["src/**/*.ts", "src/test/**/*.js", "custom_typings/*.d.ts"],
  "exclude": [],
  "references": [
    {"path": "../ssr-client"},
    {"path": "../../lit-html"},
    {"path": "../../lit-element"}
  ]
}
