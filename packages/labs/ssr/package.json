{
  "name": "@lit-labs/ssr",
  "type": "module",
  "version": "2.1.0",
  "publishConfig": {
    "access": "public"
  },
  "description": "SSR for Lit",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean && npm run build:ts",
    "build:ts": "tsc",
    "build:ts:watch": "tsc --watch",
    "clean": "rm -rf index.js demo/ test/ lib/ *.tsbuildinfo",
    "demo:vm-modules": "node --experimental-vm-modules ./demo/vm-modules/server.js",
    "demo:global": "node ./demo/global/server.js",
    "test": "npm run test:unit && npm run test:integration",
    "test:integration": "npm run test:integration:dev && npm run test:integration:prod",
    "test:integration:dev": "MODE=dev NODE_OPTIONS=--experimental-vm-modules wtr",
    "test:integration:prod": "MODE=prod NODE_OPTIONS=--experimental-vm-modules wtr",
    "test:unit": "node --experimental-vm-modules ./test/all-tests.js"
  },
  "files": [
    "/lib/",
    "/index.{d.ts,d.ts.map,js,js.map}"
  ],
  "author": "Google LLC",
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/lit/lit.git",
    "directory": "packages/labs/ssr"
  },
  "devDependencies": {
    "@koa/router": "^10.1.1",
    "@open-wc/testing": "^3.0.0-next.1",
    "@open-wc/testing-karma": "^4.0.9",
    "@types/chai": "^4.2.11",
    "@types/command-line-args": "^5.0.0",
    "@types/koa": "^2.0.49",
    "@types/koa-cors": "*",
    "@types/koa-static": "^4.0.1",
    "@types/koa__router": "^8.0.2",
    "@types/mocha": "^9.0.0",
    "@types/node-fetch": "^2.5.7",
    "@types/parse5": "^6.0.1",
    "@types/resolve": "^1.14.0",
    "@web/test-runner": "^0.13.16",
    "@webcomponents/template-shadowroot": "^0.1.0",
    "chai": "^4.2.0",
    "command-line-args": "^5.1.1",
    "deepmerge": "^4.2.2",
    "koa": "^2.7.0",
    "koa-cors": "^0.0.16",
    "koa-node-resolve": "^1.0.0-pre.5",
    "koa-static": "^5.0.0",
    "mocha": "^9.1.1",
    "typescript": "^4.3.5",
    "uvu": "^0.5.1"
  },
  "dependencies": {
    "@lit-labs/ssr-client": "^1.0.0",
    "@lit/reactive-element": "^1.1.0",
    "@types/node": "^16.0.0",
    "lit": "^2.1.0",
    "lit-element": "^3.1.0",
    "lit-html": "^2.1.0",
    "node-fetch": "^2.6.0",
    "parse5": "^6.0.1",
    "resolve": "^1.10.1"
  },
  "engines": {
    "node": ">=13.9.0"
  }
}
