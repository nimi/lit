{
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "target": "es2019",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es2020", "DOM", "DOM.Iterable"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,
    "outDir": "./",
    "rootDir": "./src",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "experimentalDecorators": true
  },
  "references": [
    {"path": "src/tsconfig-cjs.json"},
    {"path": "src/tsconfig-module.json"}
  ]
}
